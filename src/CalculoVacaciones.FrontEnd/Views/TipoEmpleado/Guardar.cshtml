@using CalculoVacaciones.Data.Models

@model TipoEmpleado

@{
    ViewData["Title"] = "Nuevo Tipo de Empleado";
}

<h2>@ViewData["Title"]</h2>

<div>
    <form asp-action="Guardar">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
        </div>
        <div class="form-group">
            <label for="DiasVacacionesAnuales">Días de Vacaciones Anuales</label>
            <input type="number" class="form-control" id="DiasVacacionesAnuales" name="DiasVacacionesAnuales" value="@Model.DiasVacacionesAnuales" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        <a href="@Url.Action("Listar")" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}